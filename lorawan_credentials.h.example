#ifndef LORAWAN_CREDENTIALS_H
#define LORAWAN_CREDENTIALS_H

// Example TTN credentials file
// 
// INSTRUCTIONS:
// 1. Copy this file to 'lorawan_credentials.h'
// 2. Replace the values below with your actual TTN credentials
// 3. The real credentials file is gitignored and won't be committed
//
// Get these values from The Things Network Console:
// https://console.thethingsnetwork.org/

// JoinEUI/AppEUI - Often all zeros for TTN (LSB format)
// If TTN shows a non-zero JoinEUI, reverse the byte order for LSB
static const u1_t PROGMEM APPEUI[8] = { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 };

// DevEUI in LSB format (reverse byte order from TTN console)
// Example: If TTN shows 70B3D57ED0072B1D
// Use LSB format: { 0x1D, 0x2B, 0x07, 0xD0, 0x7E, 0xD5, 0xB3, 0x70 }
static const u1_t PROGMEM DEVEUI[8] = { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 };

// AppKey in MSB format (exactly as shown in TTN console)
// Copy the AppKey bytes exactly as displayed in TTN
static const u1_t PROGMEM APPKEY[16] = { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00,
                                          0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 };

#endif // LORAWAN_CREDENTIALS_H